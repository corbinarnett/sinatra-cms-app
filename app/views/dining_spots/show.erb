<!-- SHOW PAGE FOR DINING_SPOTS -->
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"><%= @dining_spot.name %></h1>
  </div>
</div>
<div class="container">
  <div class="card text-center" style="width: 30rem; margin: auto; padding: 20px;">
    <h2><%= @dining_spot.name %></h2>
    <p><%= @dining_spot.address %></p>
    <p><%= @dining_spot.website %></p>
    <% if current_user == @dining_spot.user %>
    <form action="/dining_spots/<%= @dining_spot.id %>" method="post">
      <input type="hidden" name="_method" value="delete" />
      <input class="btn btn-primary btn-lg" type="submit" name="" value="Delete" />
      <a class="btn btn-primary btn-lg" href="/dining_spots/<%= @dining_spot.id %>/edit" role="button">Edit</a>
    </form>
    <% end %>
  </div>
</div>